#
# git
#
alias ggg='alias | grep git | fzf'

alias ga='git add'
alias gaa="git add -A"
alias gcn="git commit --no-edit"

# git log fzf
autoload -U fzf_git_commits;
alias glf="fzf_git_commits"

# git branch fzf
autoload -U fzf_git_branches;
alias gbf="fzf_git_branches"

# git log graph
alias glg='git log --topo-order --graph --pretty=format:"$_git_log_oneline_format" --exclude="subrepo/*" --exclude="refs/subrepo/*" --exclude="refs/original/refs/heads/subrepo/*" --exclude="refs/heads/subrepo/*" --all'
alias glG='git log --topo-order --graph --pretty=format:"$_git_log_medium_format" --exclude="subrepo/*" --exclude="refs/subrepo/*" --exclude="refs/original/refs/heads/subrepo/*" --exclude="refs/heads/subrepo/*" --all'
alias gld='git log --topo-order --stat --patch --pretty=format:"$_git_log_medium_format" -U20'
alias glD='DELTA_FEATURES=+side-by-side git log --topo-order --stat --patch --pretty=format:"$_git_log_medium_format" -U20 --full-diff'

alias gid='git diff --no-ext-diff --cached -U20'
alias giD='DELTA_FEATURES=+side-by-side git diff --no-ext-diff --cached -U20'
alias gwd='git diff --no-ext-diff -U20'
alias gwD='DELTA_FEATURES=+side-by-side git diff --no-ext-diff -U20'
alias gfh='git log --follow --topo-order --stat --patch --pretty=format:"$_git_log_medium_format" --'
alias gwr='git restore'
alias gsu="git stash push"
alias gcR='git revert'
alias gcr='git reset "HEAD^"'

