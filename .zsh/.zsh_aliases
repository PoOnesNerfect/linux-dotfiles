#
# zellij
#

# attach to session
alias za="zellij a"
alias zl="zellij ls"

# new session with layout
function zz {
    zellij -n $1 -s $1
}

# kill session
alias zk="zellij k"

# kill all sessions
alias zka="zellij ka"

